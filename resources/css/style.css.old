body {
    font-family: Helvetica;
	font-size: 22px;
	color: seashell;
	background-color: black;
	opacity: 0.9;
    text-align: center;
    /* reset browser default */
    margin: 0;
    padding: 0;

    box-sizing: border-box;
}

a {
    color: seashell;
}

/* header */
header {
    height: 69px;
    width: 100%;
    border-bottom: 1px solid seashell;
    z-index: 2;
    display: inline-flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

#logo-container {
    display: flex;
    align-items: center;
}

#logo {
    margin-left: 10px;
    height: 50px;
}

nav {
    display: flex;
    align-items: center;
    margin-right: 10px;
}

nav ul li {
    display: inline-block;
    text-decoration: underline;
    padding: 0px 8px;
}

/* mission */
.mission {
    background-image: url("../images/img-mission-background.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    height: 700px;
    width: 90%;
    max-width: 1200px;
    margin: 69px auto 0px auto;
    display: flex;
    margin: 0 5% 0 5%;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-size: cover; */
}

.mission-text {
    background-color: black;
    width: 100%;
    text-align: center;
}
